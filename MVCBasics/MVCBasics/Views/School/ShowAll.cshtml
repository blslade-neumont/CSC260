@model MVCBasics.Models.School
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<h2>Teachers</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Years Taught</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in @Model.Teachers)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.Gender.ToString()</td>
                <td>@teacher.YearsTaught years</td>
                <td>@teacher.Status.ToString()</td>
                <td>
                    @Html.ActionLink("Edit", "EditTeacher", new { Id = teacher.Id });
                    @Html.ActionLink("Destroy", "DestroyTeacher", new { Id = teacher.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Create New", "CreateTeacher")

<h2>Students</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Cohort</th>
            <th>Degree</th>
            <th>Graduation Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in @Model.Students)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Gender.ToString()</td>
                <td>Cohort @student.Cohort</td>
                <td>@(student.Degree == null ? "None" : student.Degree.Value.ToString())</td>
                <td>
                    @if (student.Degree != null)
                    {
                        @(student.GraduationDate == null ? "None" : student.GraduationDate.Value.ToString("dd MMM yyyy"))
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditStudent", new { Id = student.Id });
                    @Html.ActionLink("Destroy", "DestroyStudent", new { Id = student.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Create New", "CreateStudent")

<h2>Statistics</h2>

@{
    var ts = ViewBag.teacherStats;
    var ss = ViewBag.studentStats;
}

<p>
    There are @ts.Count teachers;
    @ts.Genders.Male% male, @ts.Genders.Female% female.

    @ts.Status.FullTime% are full time, @ts.Status.Adjunct% are adjunct.

    The average age taught is @ts.AverageYearsTaught years.
</p>

<p>
    There are @ss.Count teachers;
    @ss.Genders.Male% male, @ss.Genders.Female% female.

    <ul>
        <li>Undecided: @ss.Degrees.Undecided%</li>
        <li>BSGD: @ss.Degrees.BSGD%</li>
        <li>BSCS: @ss.Degrees.BSCS%</li>
        <li>BSIS: @ss.Degrees.BSIS%</li>
        <li>BSTM: @ss.Degrees.BSTM%</li>
        <li>BSWD: @ss.Degrees.BSWD%</li>
    </ul>
</p>
