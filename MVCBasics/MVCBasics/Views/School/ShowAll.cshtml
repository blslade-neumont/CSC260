@model SchoolViewModel
@{
    ViewData["Title"] = Model.Name;
}

<img src="~/images/nu.png" class="full-width" />

<h1>@Model.Name</h1>

<div class="clearfix">
    <div class="float-left">
        <h2>Teachers</h2>
    </div>
    <div class="float-right" style="margin-top: 2em;">
        <a class="btn btn-primary" href="@Url.Action("CreateTeacher")">
            <i class="fas fa-plus mr-2"></i>Create New
        </a>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Years Taught</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in @Model.Teachers)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.Gender.ToString()</td>
                <td>@teacher.YearsTaught years</td>
                <td>@teacher.Status.ToString()</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-primary" href="@Url.Action("EditTeacher", new { Id=teacher.Id })">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a class="btn btn-danger" href="@Url.Action("DestroyTeacher", new { Id = teacher.Id })">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="clearfix">
    <div class="float-left">
        <h2>Students</h2>
    </div>
    <div class="float-right" style="margin-top: 2em;">
        <a class="btn btn-primary" href="@Url.Action("CreateStudent")">
            <i class="fas fa-plus mr-2"></i>Create New
        </a>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Cohort</th>
            <th>Degree</th>
            <th>Graduation Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in @Model.Students)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Gender.ToString()</td>
                <td>Cohort @student.Cohort</td>
                <td>@(student.Degree == null ? "None" : student.Degree.Value.ToString())</td>
                <td>
                    @if (student.Degree != null)
                    {
                        @(student.GraduationDate == null ? "None" : student.GraduationDate.Value.ToString("dd MMM yyyy"))
                    }
                </td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-primary" href="@Url.Action("EditStudent", new { Id=student.Id })">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a class="btn btn-danger" href="@Url.Action("DestroyStudent", new { Id = student.Id })">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Statistics</h2>

@inject StatisticsService statsService
@{
    var stats = statsService.GetStatistics();
    var ts = stats.Teacher;
    var ss = stats.Student;
}

<p>
    There are @ts.Count teachers;
    @ts.Genders.Male% male, @ts.Genders.Female% female.

    @ts.Status.FullTime% are full time, @ts.Status.Adjunct% are adjunct.

    The average age taught is @ts.AverageYearsTaught years.
</p>

<p>
    There are @ss.Count students;
    @ss.Genders.Male% male, @ss.Genders.Female% female.

    <ul>
        <li>Undecided: @ss.Degrees.Undecided%</li>
        <li>BSGD: @ss.Degrees.BSGD%</li>
        <li>BSCS: @ss.Degrees.BSCS%</li>
        <li>BSIS: @ss.Degrees.BSIS%</li>
        <li>BSTM: @ss.Degrees.BSTM%</li>
        <li>BSWD: @ss.Degrees.BSWD%</li>
    </ul>
</p>
