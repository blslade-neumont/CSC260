@model MVCBasics.Models.Course
@{
    ViewData["Title"] = "Course";
}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-12">

                <h2>Course: @Model.Name</h2>

                <h4>Code: @Model.Code</h4>
                <h4>Teacher: <a href="@Url.Action("Teacher", new { @Model.Teacher.Id })">@Model.Teacher.Name</a></h4>

                <h3 class="mt-5">Students</h3>

                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Grade</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in @Model.Enrollments)
                        {
                            var student = enrollment.Student;
                            <tr>
                                <td><a href="@Url.Action("Student", new { @student.Id })">@student.Name</a></td>
                                <td>@enrollment.Grade</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a class="btn btn-danger" href="@Url.Action("RemoveStudentFromCourse", new { Model.Id, secondaryId = student.Id })">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                <div class="mt-3">
                    @using (Html.BeginForm("AddStudentToCourse", "School", new { Model.Id }, FormMethod.Post, null, new { @class = "form-inline" }))
                    {
                        @Html.ValidationSummary(true)
                        
                        <div class="form-group mr-3">
                            @inject ICrudService<Student> studentService
                            @{ 
                                var students = await studentService.FindAllAsync();
                            }
                            <select class="form-control" id="StudentId" name="StudentId">
                                @foreach (Student student in students)
                                {
                                    <option value="@student.Id">@student.Name</option>
                                }
                            </select>
                            
                            <select class="form-control ml-3" id="LetterGrade" name="LetterGrade">
                                <option value="@LetterGrade.A" selected>A</option>
                                <option value="@LetterGrade.B">B</option>
                                <option value="@LetterGrade.C">C</option>
                                <option value="@LetterGrade.D">D</option>
                                <option value="@LetterGrade.F">F</option>
                            </select>
                        </div>
                        
                        <div class="custom-control-inline">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-plus mr-2"></i>Add Student
                            </button>
                        </div>
                    }
                </div>

                <div class="form-actions mt-5">
                    <a class="btn btn-primary" href="@Url.Action("Courses")">Back</a>
                    <a class="btn btn-link" href="@Url.Action("EditCourse", new { @Model.Id })">Edit</a>
                </div>

            </div>
        </div>
    </div>
</div>
