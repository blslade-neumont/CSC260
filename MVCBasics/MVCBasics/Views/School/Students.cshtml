@model SchoolViewModel
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div class="clearfix">
    <div class="float-left">
        <h2>Students</h2>
    </div>
    <div class="float-right" style="margin-top: 2em;">
        <a class="btn btn-primary" href="@Url.Action("CreateStudent")">
            <i class="fas fa-plus mr-2"></i>Create New
        </a>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Cohort</th>
            <th>Degree</th>
            <th>Graduation Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in @Model.Students)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Gender.ToString()</td>
                <td>Cohort @student.Cohort</td>
                <td>@(student.Degree == null ? "None" : student.Degree.Value.ToString())</td>
                <td>
                    @if (student.Degree != null)
                    {
                        @(student.GraduationDate == null ? "None" : student.GraduationDate.Value.ToString("dd MMM yyyy"))
                    }
                </td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-primary" href="@Url.Action("EditStudent", new { Id=student.Id })">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a class="btn btn-danger" href="@Url.Action("DestroyStudent", new { Id = student.Id })">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
