@model SchoolViewModel
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div class="clearfix">
    <div class="float-left">
        <h2>Courses</h2>
    </div>
    <div class="float-right" style="margin-top: 2em;">
        <a class="btn btn-primary" href="@Url.Action("Create")">
            <i class="fas fa-plus mr-2"></i>Create New
        </a>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in @Model.Courses)
        {
            <tr>
                <td><a href="@Url.Action("View", new { course.Id })">@course.Name</a></td>
                <td>@course.Code</td>
                <td><a href="@Url.Action("View", "Teacher", new { @course.Teacher.Id })">@course.Teacher.Name</a></td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-primary" href="@Url.Action("Edit", new { Id = course.Id })">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a class="btn btn-danger" href="@Url.Action("Destroy", new { Id = course.Id })">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
